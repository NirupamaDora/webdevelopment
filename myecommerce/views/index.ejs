<html>

<head>
    <!-- <link rel="stylesheet" type="text/css" href="../public/stylesheets/registrationCss.css"> -->
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.8/css/all.css">

    <style>
        @import url('https://fonts.googleapis.com/css?family=Numans');

        html,
        body {
            background-image: url('https://img.freepik.com/free-photo/black-friday-elements-assortment_23-2149074076.jpg');
            background-size: cover;
            background-repeat: no-repeat;
            height: 100%;
            font-family: 'Numans', sans-serif;
        }

        .container {
            height: 100%;
            align-content: center;
        }

        .card {
            height: 550px;
            margin-top: 100px;
            margin-bottom: auto;
            width: 400px;
            background-color: rgba(0, 0, 0, 0.5) !important;
        }

        .card-header h4 {
            color: rgb(244, 235, 235);
        }

        .input-group-prepend span {
            width: 50px;
            background-color: #ffa812;
            color: black;
            border: 0 !important;
        }

        input:focus {
            outline: 0 0 0 0 !important;
            box-shadow: 0 0 0 0 !important;
        }


        .signup_btn {
            color: black;
            background-color: #ff8112;
            width: 100px;
        }

        .signup_btn:hover {
            color: black;
            background-color: white;
        }

        .links {
            color: white;
        }

        .links a {
            font-size: large;
            margin-left: 10px;
            color: brown;
        }

        .head-text {
            margin-top: 0px;
            margin-bottom: auto;

        }

        .head-text h5 {
            background-color: rgb(249, 158, 2);
        }

        .msg-p {
            color: red;

        }
    </style>
</head>

<body>
    <div class="container">
        <div class="d-flex justify-content-center h-400 w-500">
            <div class="card ">
                <div class="text-center head-text">
                    <h5>ECOMMERCE</h5>
                </div>
                <div class="card-header text-center">
                    <!-- <article class="card-body mx-auto" style="max-width: 400px;"> -->
                    <h4>Create Account</h4>
                </div>
                <p class="msg-p text-center">
                    <%=(typeof alertMsg!='undefined' )? alertMsg:''%>
                </p>
                <div class="card-body">
                    <form method="post" action="/register">
                        <div class="form-group input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"> <i class="fa fa-user"></i> </span>
                            </div>
                            <input name="name" class="form-control" placeholder="Full name" type="text">
                        </div> <!-- form-group// -->
                        <div class="form-group input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
                            </div>
                            <input name="email" class="form-control" placeholder="Email address" type="email">
                        </div> <!-- form-group// -->
                        <div class="form-group input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"> <i class="fa fa-phone"></i> </span>
                            </div>
                            <select class="custom-select" style="max-inline-size: 70px;">
                                <option selected="" value="91">+91</option>
                                <option value="92">+92</option>
                                <option value="93">+93</option>
                                <option value="94">+94</option>
                            </select>
                            <input name="phone" class="form-control" placeholder="Phone number" type="text">
                        </div> <!-- form-group// -->


                </div> <!-- form-group end.// -->
                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                    </div>
                    <input class="form-control" placeholder="Create password" type="password" name="password">
                </div> <!-- form-group// -->
                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                    </div>
                    <input class="form-control" placeholder="Repeat password" type="password" name="confirm_password">
                </div> <!-- form-group// -->
                <div class="form-group">
                    <button type="submit" value="register" class="btn w-100 signup_btn"> Create Account
                    </button>
                </div> <!-- form-group// -->
                <!-- <p class="text-center">Have an account? <a href="">Log In</a> </p> -->
                <div class="card-footer">
                    <div class="d-flex justify-content-center links">
                        Already have account ?<a href="/login">Sign In</a>
                    </div>

                </div>
                </form>
                <!-- </article> -->
            </div>

        </div>
    </div>


    </div>

</body>

</html>